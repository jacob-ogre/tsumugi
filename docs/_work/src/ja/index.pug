  - var title             = 'tsumugi - シンプルで使いやすいブログ用のWordPressテーマ。';//-meta title
  - var description       = 'シンプルで使いやすいブログ用のWordPressテーマ。';//-meta description
  - var og_description    = description;//-og description
  - var og_url            = 'http://littlebirdjp.github.io/tsumugi/ja/';//-og url
  - var tw_url            = og_url;
  - var tw_description    = description;
  - var rootPath          = '../'//-root path
  - var lang              = 'ja'

